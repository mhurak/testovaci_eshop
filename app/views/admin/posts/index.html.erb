<h1>Admin článkov</h1>

<p>
  <%= link_to "Pridať článok", new_admin_post_path, class: "btn btn-primary" %>
</p>

<table class="table">

  <thead>
    <tr>
      <th>Nazov</th>
      <th>Kategória</th>
      <th>Publikovane</th>
      <th>Akcie</th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.category.name if post.category %></td>
      <td><%= post.published %></td>
      <td><%= link_to "Upravit", edit_admin_post_path(post) %></td>
      <td><%= link_to "Odstrániť", admin_post_path(post), method: "delete", confirm: "Chete odstrániť záznam číslo #{post.id} ?" %></td>
    </tr>
    <% end %>

  </tbody>
</table>
