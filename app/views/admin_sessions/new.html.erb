<%= form_tag admin_sessions_path do %>

  <div class="row">
    <div class="col-md-4">
      <h2>Prihlásenie</h2>

      <p><%= flash[:alert] %></p>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>

      <%= submit_tag "Prihlásiť", class: "btn btn-success" %>
    </div>
  </div>

<% end %>